h1{
	color:white;
	padding-top:10px;
	text-align:center;
	font-size:60px;
	font-family:timesnewroman;
}
input{
	background-color:white;
	width:70%;
	margin-left:12%
	font-size:20px;
	padding:16px;
	border-radius:10px;
	border-color:black;
	margin-bottom:20px;
}
textarea{
	background-color:white;
	width:70%;
	margin-left:12%
	font-size:20px;
	padding:16px;
	border-radius:10px;
	border-color:black;
	margin-bottom:20px;
	font-family:timesnewroman;
}
input:focus-within{
	outline:none;
	border-color:lightgreen;
	border-width:3px;
}
textarea:focus-within{
	outline:none;
	border-color:lightgreen;
	border-width:3px;
}
button{
	background-color:lightgreen;
	border-radius:20px;
	border-color:black;
	font-size:22px;
	padding:10px 18px;
	text-align:center;
	display:flex;
	margin:auto;

}
button:hover{
	opacity:80%;
	cursor:pointer;
}
	  
	
	
	
	
	
	
	
	
	
	
	
	
	
	
